{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "xwp/country-card",
	"version": "1.0.0",
	"title": "Country Card",
	"category": "widgets",
	"icon": "admin-site",
	"description": "Block rendering a card with country information.",
	"keywords": [
		"Country",
		"Card",
		"Country Card"
	],
	"supports": {
		"align": true
	},
	"attributes": {
		"countryCode": {
			"type": "string",
			"source": "html",
			"selector": ".x-block-country-card-preview__country-code"
		},
		"relatedPosts": {
			"type": "array",
			"source": "query",
			"selector": ".x-block-country-card-preview__related-post",
			"query": {
				"title": {
					"type": "string",
					"selector": ".x-block-country-card-preview__related-post--title",
					"source": "text"
				},
				"excerpt": {
					"type": "string",
					"selector": ".x-block-country-card-preview__related-post--excerpt",
					"source": "text"
				},
				"link": {
					"type": "string",
					"selector": ".x-block-country-card-preview__related-post--link",
					"source": "attribute",
					"attribute": "href"
				},
				"id": {
					"type": "string",
					"selector": ".x-block-country-card-preview__related-post--link",
					"source": "attribute",
					"attribute": "data-post-id"
				}
			}
		}
	},
	"example": {
		"attributes": {

			"countryCode": "IN",
			"relatedPosts": [
				{
					"title": "Luctus accumsan tortor",
					"excerpt": "Lorem India ipsum dolor sit amet, consectetur adipiscing elit.",
					"link": "https://example.com",
					"id": "123"
				}
			]
		}
	},
	"textdomain": "xwp-country-card",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
